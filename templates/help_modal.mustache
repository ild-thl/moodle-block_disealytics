{{#js}}
    require(['block_disealytics/add_interaction'], function(addInteraction) {
        // Attach click event to each accordion head.
        const accordion = document.getElementById('info-modal-accordion');
        const accordionHeads = document.querySelectorAll('#info-modal-accordion .accordion-head');
        accordionHeads.forEach((head, index) => {
            head.addEventListener('click', () => {
                addInteraction.toggleAccordion(accordion, index + 1);
            });
        });
    });
{{/js}}