{{!
    @template block_disealytics/view-buttons

    Template purpose and description.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * title

    Example context (json):
    {
        "title" : "example view"
    }
}}
<div class="panel-footer">
    <a style="cursor: pointer;text-align: right; text-decoration: none"
       class="block_disealytics-toggle-show-btn block_disealytics-toggle-show-btn-{{view_type}} hidden"
       data-action="block_disealytics/show-{{view_type}}"
       data-actiontype="block_disealytics/toggle-show">
            <span style="text-align: right" class="show-more-btn">{{#str}}show-more-text, block_disealytics{{/str}} <i
                    class="fa fa-arrow-down"></i></span>
        <span style="text-align: right" class="show-less-btn hidden">{{#str}}show-less-text, block_disealytics{{/str}} <i
                class="fa fa-arrow-up"></i></span>
    </a>
</div>