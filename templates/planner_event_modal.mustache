<div class="planner-event-modal block_disealytics">
    <span class="planner-event-modal-title">{{eventTypeName}}</span>
    <div class="planner-event-modal-items">
        <span class="planner-event-modal-title">{{#str}} planner_event_date_label, block_disealytics {{/str}}:</span>
        <span class="event-time">{{#userdate}}{{timestampStart}}, {{#str}}strftimedatetimeshort, core_langconfig{{/str}}{{/userdate}}
            {{#hasEnd}}
                - {{#userdate}}{{timestampEnd}}, {{#str}}strftimedatetimeshort, core_langconfig{{/str}}{{/userdate}}
            {{/hasEnd}}
                    </span>
    </div>
    {{#location}}
        <div class="planner-event-modal-items">
            <span class="planner-event-modal-title">{{#str}} planner_event_location_label, block_disealytics {{/str}}:</span>
            <span class="event-location">{{.}}</span>
        </div>
    {{/location}}
    <div class="planner-event-modal-items">
        <span class="planner-event-modal-title">{{#str}} planner_event_course_label, block_disealytics {{/str}}:</span>
        <span class="event-location">{{courseName}}</span>
    </div>
</div>